{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>{{ 'page.index.title'|trans }}</h1>
{% endblock %}

{% block body %}

    <div class="row">
        <a href="{{ path('task_create') }}" class="btn btn-success">{{ 'page.index.button.add.task'|trans }}</a>
        <a href="{{ path('task_list', {'isDone': false}) }}"
           class="btn btn-info">{{ 'page.index.button.list.task.to.complete'|trans }}</a>
        <a href="{{ path('task_list', {'isDone': true}) }}"
           class="btn btn-secondary">{{ 'page.index.button.list.task.completed'|trans }}</a>
    </div>
{% endblock %}
