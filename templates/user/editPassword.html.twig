{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>{{ 'page.edit.password.title'|trans }} <strong>{{ user.username }}</strong></h1>
{% endblock %}

{% block header_img %}
{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('edit_password', {'id' : user.id})}) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success pull-right">
            {{ 'page.edit.password.button.edit'|trans }}
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
