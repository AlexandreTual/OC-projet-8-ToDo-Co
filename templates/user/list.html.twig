{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block header_title %}<h1>{{ 'page.list.user.title'|trans }}</h1>{% endblock %}

{% block body %}
    {% if users|length == 0 %}
        <div class="alert alert-warning" role="alert">
            {{ 'page.list.user.message.no.user'|trans }}
        </div>
    {% else %}
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>{{ 'page.list.user.board.index'|trans }}</th>
                    <th>{{ 'page.list.user.board.username'|trans }}</th>
                    <th>{{ 'page.list.user.board.email'|trans }}</th>
                    <th>{{ 'page.list.user.board.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">{{ 'page.list.user.button.edit'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
